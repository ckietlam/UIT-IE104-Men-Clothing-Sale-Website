<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý sản phẩm</title>
    <link rel="stylesheet" href="styles/product-management.css" />
  </head>
  <body>
    <!-- Sidebar Section -->
    <div class="sidebar">
      <div class="sidebarHeader">
        <h2>ADMIN</h2>
        <hr class="menuDivider" />
      </div>

      <ul class="menu">
        <li class="menuItem">
          <a href="#">
            <img
              src="icons/icon-dashboard.svg"
              alt="Dashboard Icon"
              class="menuIcon"
            />
            Dashboard
          </a>
        </li>
        <hr class="menuDivider" />
        <!-- Divider added here -->
        <li class="menuItem dropdown">
          <button class="dropdownToggle">
            <img
              src="icons/icon-table.svg"
              alt="Product Icon"
              class="menuIcon"
            />
            <span>Sản phẩm</span>
          </button>
          <ul class="submenu">
            <li><a href="/admin-add-product">Thêm sản phẩm</a></li>
            <li><a href="/admin-products-management">Quản lý sản phẩm</a></li>
          </ul>
        </li>
        <li class="menuItem">
          <a href="#">
            <img src="icons/icon-user.svg" alt="User Icon" class="menuIcon" />
            Người dùng
          </a>
        </li>
        <li class="menuItem">
          <a href="#">
            <img src="icons/icon-table.svg" alt="Order Icon" class="menuIcon" />
            Đơn hàng
          </a>
        </li>
        <hr class="menuDivider" />
        <!-- Divider added here -->
        <li class="menuItem">
          <a href="#">
            <img
              src="icons/icon-setting.svg"
              alt="Logout Icon"
              class="menuIcon"
            />
            Settings
          </a>
        </li>

        <li class="menuItem">
          <a href="#">
            <img
              src="icons/icon-logout.svg"
              alt="Logout Icon"
              class="menuIcon"
            />
            Đăng xuất
          </a>
        </li>
      </ul>

      <button class="toggleSidebarBtn">
        <img
          src="icons/icon-backward.svg"
          alt="Toggle Icon"
          class="toggleIcon"
        />
      </button>
    </div>

    <!-- Main Content Section -->
    <div class="mainContent">
      <h2 class="pageTitle">Danh sách sản phẩm</h2>

      <!-- Filter and Search Row -->
      <div class="filterSearchRow">
        <div class="filterEntries">
          <label for="entriesSelect">Hiển thị</label>
          <select id="entriesSelect" class="entriesSelect">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
          <span>sản phẩm</span>
        </div>
        <div class="searchContainer">
          <label for="searchInput">Tìm kiếm:</label>
          <input
            type="text"
            id="searchInput"
            class="searchInput"
            placeholder="Nhập từ khóa..."
          />
        </div>
      </div>

      <!-- Table Container -->
      <div class="tableContainer">
        <table class="dataTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th>Type</th>
              <th>Description</th>
              <th>Category</th>
              <th>Size</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].pd_id %></td>
              <td><%= dataTable[i].name %></td>
              <td><%= dataTable[i].price %></td>
              <td><%= dataTable[i].type_of_clothes %></td>
              <td><%= dataTable[i].description %></td>
              <td>
                <%= dataTable[i].categoryData ? dataTable[i].categoryData.name :
                'Không có danh mục' %>
              </td>
              <td><%= dataTable[i].size %></td>
              <td class="action-buttons">
                <button class="btn-edit">
                  <a
                    href="/edit-product?pd_id=<%= dataTable[i].pd_id %>"
                    class="btn-edit"
                    type="button"
                    onmouseover="this.style.textDecoration='none'"
                    >Edit</a
                  >
                </button>
                <button class="btn-delete">
                  <a
                    href="/delete-product?pd_id=<%= dataTable[i].pd_id %>"
                    class="btn-delete"
                    type="button"
                    onmouseover="this.style.textDecoration='none'"
                    >Delete</a
                  >
                </button>
              </td>
            </tr>
            <% } %>
            <!-- Thêm nhiều dòng trống khác ở đây -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="paginationContainer">
        <span class="paginationInfo">Showing 1 to 10 of 30 entries</span>
        <div class="paginationControls">
          <button class="paginationButton" id="prevPage">Previous</button>
          <button class="paginationButton active">1</button>
          <button class="paginationButton">2</button>
          <button class="paginationButton">3</button>
          <button class="paginationButton" id="nextPage">Next</button>
        </div>
      </div>
    </div>

    <!-- Add your JavaScript file -->
    <script src="scripts/admin-sidebar.js"></script>
    <script src="scripts/admin-product-management.js"></script>

    <script src="js/demo/datatables-demo.js"></script>
  </body>
</html>
