<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>H(T)ML Product</title>
    <link rel="stylesheet" href="styles/product-view-all-giay.css">
    
</head>
<body>

    <!-- Header -->
    <%- include('../partials/header', { activeIdx: 1 }) %>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/product-view-all">Tất cả sản phẩm</a> &gt; 
        <span><strong>Giày dép</strong></span>
    </div>

    <!-- Product Section -->
     
    <div class="categories-container">
        <div class="category-section">
            <div class="category-header">
                <h2>Dép</h2>
            </div>
            <div class="product-carousel limited-view">
                <div class="carousel-track">
                    <%for (let i = 0; i < depData.length; i++) {%>
                        <div class="product-card">
                            <a href="/product-view?pd_id=<%=depData[i].pd_id%>">
                                <img src="<%= depData[i].productImageData[0].image %>" alt="<%= depData[i].name %>">
                                <h3 class="product-name">
                                    <%= depData[i].name.length > 30 ? depData[i].name.substring(0, 30) + "..." : depData[i].name %>
                                </h3>
                                <div class="product-details">
                                    <p class="product-description">
                                        <%= depData[i].description.length > 100 ? depData[i].description.substring(0, 100) + "..." : depData[i].description %>
                                    </p>
                                    <p class="product-price"><%= depData[i].price.toLocaleString('vi-VN') %>đ</p>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
          

        <div class="category-section">
            <div class="category-header">
                <h2>Giày</h2>
            </div>
            <div class="product-carousel limited-view">
                <div class="carousel-track">
                    <%for (let i = 0; i < giayData.length; i++) {%>
                        <div class="product-card">
                            <a href="/product-view?pd_id=<%=giayData[i].pd_id%>">
                                <img src="<%= giayData[i].productImageData[0].image %>" alt="<%= giayData[i].name %>">
                                <h3 class="product-name">
                                    <%= giayData[i].name.length > 30 ? giayData[i].name.substring(0, 30) + "..." : giayData[i].name %>
                                </h3>
                                <div class="product-details">
                                    <p class="product-description">
                                        <%= giayData[i].description.length > 100 ? giayData[i].description.substring(0, 100) + "..." : giayData[i].description %>
                                    </p>
                                    <p class="product-price"><%= giayData[i].price.toLocaleString('vi-VN') %>đ</p>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->    
    <%- include('../partials/footer', { activeIdx: 0 }) %>

    <script src="scripts/product-view-all.js"></script>
</body>
</html>
