<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>H(T)ML Product</title>
    <link rel="stylesheet" href="styles/product-view-all-ao.css">
    
</head>
<body>

    <!-- Header -->
    <%- include('../partials/header', { activeIdx: 0 }) %>

    <!-- Breadcrumb -->

    <div class="breadcrumb">
        <a href="/product-view-all">Tất cả sản phẩm</a> &gt; 
        <span><strong>Áo</strong></span>
    </div>

    <!-- Product Section -->
     
    <div class="categories-container">
        <div class="category-section">
            <div class="category-header">
                <h2>Áo Thun</h2>
            </div>
            <div class="product-carousel limited-view">
                <div class="carousel-track">
                    <%for (let i = 0; i < aoThunData.length; i++) {%>
                        <div class="product-card">
                            <a href="/product-view?pd_id=<%=aoThunData[i].pd_id%>">
                                <img src="<%= aoThunData[i].productImageData[0].image %>" alt="<%= aoThunData[i].name %>">
                                <h3 class="product-name">
                                    <%= aoThunData[i].name.length > 30 ? aoThunData[i].name.substring(0, 30) + "..." : aoThunData[i].name %>
                                </h3>
                                <div class="product-details">
                                    <p class="product-description">
                                        <%= aoThunData[i].description.length > 100 ? aoThunData[i].description.substring(0, 100) + "..." : aoThunData[i].description %>
                                    </p>
                                    <p class="product-price"><%= aoThunData[i].price.toLocaleString('vi-VN') %>đ</p>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
          

        <div class="category-section">
            <div class="category-header">
                <h2>Áo Sơ Mi</h2>
            </div>
            <div class="product-carousel limited-view">
                <div class="carousel-track">
                    <%for (let i = 0; i < aoSoMiData.length; i++) {%>
                        <div class="product-card">
                            <a href="/product-view?pd_id=<%=aoSoMiData[i].pd_id%>">
                                <img src="<%= aoSoMiData[i].productImageData[0].image %>" alt="<%= aoSoMiData[i].name %>">
                                <h3 class="product-name">
                                    <%= aoSoMiData[i].name.length > 30 ? aoSoMiData[i].name.substring(0, 30) + "..." : aoSoMiData[i].name %>
                                </h3>
                                <div class="product-details">
                                    <p class="product-description">
                                        <%= aoSoMiData[i].description.length > 100 ? aoSoMiData[i].description.substring(0, 100) + "..." : aoSoMiData[i].description %>
                                    </p>
                                    <p class="product-price"><%= aoSoMiData[i].price.toLocaleString('vi-VN') %>đ</p>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>

        <div class="category-section">
            <div class="category-header">
                <h2>Áo Nỉ</h2>
            </div>
            <div class="product-carousel limited-view">
                <div class="carousel-track">
                    <%for (let i = 0; i < aoNiData.length; i++) {%>
                        <div class="product-card">
                            <a href="/product-view?pd_id=<%=aoNiData[i].pd_id%>">
                                <img src="<%= aoNiData[i].productImageData[0].image %>" alt="<%= aoNiData[i].name %>">
                                <h3 class="product-name">
                                    <%= aoNiData[i].name.length > 30 ? aoNiData[i].name.substring(0, 30) + "..." : aoNiData[i].name %>
                                </h3>
                                <div class="product-details">
                                    <p class="product-description">
                                        <%= aoNiData[i].description.length > 100 ? aoNiData[i].description.substring(0, 100) + "..." : aoNiData[i].description %>
                                    </p>
                                    <p class="product-price"><%= aoNiData[i].price.toLocaleString('vi-VN') %>đ</p>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->    
    <%- include('../partials/footer', { activeIdx: 0 }) %>

    <script src="scripts/product-view-all.js"></script>
</body>
</html>
