                    <option selected><%= productData.size %></option>
                    <% let sizes = ['S', 'M', 'L', '39', '40', '41', '42',
                    'None']; for (let i = 0; i < sizes.length; i++) { if
                    (sizes[i] !== productData.size) { %>
                    <option value="<%= sizes[i] %>"><%= sizes[i] %></option>
                    <% } } %>
                  </select>
                </div>
                <div class="form-group col-md-7">
