<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa thông tin sản phẩm</title>
    <link rel="stylesheet" href="../../public/styles/edit-order-status.css">
</head>
<body>
    
    <!-- Sidebar Section -->
    <div class="sidebar">
        <div class="sidebarHeader">
            <h2>ADMIN</h2>
            <hr class="menuDivider">
        </div>

        <ul class="menu">
            <li class="menuItem">
                <a href="#">
                    <img src="../../public/icons/icon-dashboard.svg" alt="Dashboard Icon" class="menuIcon">
                    Dashboard
                </a>
            </li>
            <hr class="menuDivider"> <!-- Divider added here -->
            <li class="menuItem dropdown">
                <button class="dropdownToggle">
                    <img src="../../public/icons/icon-table.svg" alt="Product Icon" class="menuIcon">
                    <span>Sản phẩm</span>
                </button>
                <ul class="submenu">
                    <li><a href="#">Thêm sản phẩm</a></li>
                    <li><a href="#">Quản lý sản phẩm</a></li>
                </ul>
            </li>
            <li class="menuItem">
                <a href="#">
                    <img src="../../public/icons/icon-user.svg" alt="User Icon" class="menuIcon">
                    Người dùng
                </a>
            </li>
            <li class="menuItem">
                <a href="#">
                    <img src="../../public/icons/icon-table.svg" alt="Order Icon" class="menuIcon">
                    Đơn hàng
                </a>
            </li>
            <hr class="menuDivider"> <!-- Divider added here -->
            <li class="menuItem">
                <a href="#">
                    <img src="../../public/icons/icon-setting.svg" alt="Logout Icon" class="menuIcon">
                    Settings
                </a>
            </li>

            <li class="menuItem">
                <a href="#">
                    <img src="../../public/icons/icon-logout.svg" alt="Logout Icon" class="menuIcon">
                    Đăng xuất
                </a>
            </li>
        </ul>
        

        <button class="toggleSidebarBtn">
            <img src="../../public/icons/icon-backward.svg" alt="Toggle Icon" class="toggleIcon">
        </button>
    </div>


<!-- Main Content Section -->
<div class="mainContent">

    <!-- Form Section -->
    <div class="formContainer">
        <h1>Sửa trạng thái đơn hàng</h1>
        <form action="#">
            <div class="formGroup">
                <label for="orderId">ID đơn hàng</label>
                <input type="text" id="orderId" placeholder="ID đơn hàng từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="productId">ID sản phẩm</label>
                <input type="text" id="productId" placeholder="ID sản phẩm từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="customerName">Tên khách hàng</label>
                <input type="text" id="customerName" placeholder="Tên khách hàng từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="customerPhone">Số điện thoại khách hàng</label>
                <input type="text" id="customerPhone" placeholder="Số điện thoại từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="customerEmail">Email khách hàng</label>
                <input type="email" id="customerEmail" placeholder="Email từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="amount">Số lượng</label>
                <input type="number" id="amount" placeholder="Số lượng sản phẩm từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="productCost">Tổng giá trị đơn hàng</label>
                <input type="text" id="productCost" placeholder="Tổng giá trị đơn hàng từ Database" disabled>
            </div>
            <div class="formGroup">
                <label for="status">Trạng thái đơn hàng</label>
                <select id="status">
                    <option value="Confirming">Confirming</option>
                    <option value="Preparing">Preparing</option>
                    <option value="Delivering">Delivering</option>
                    <option value="Delivered">Delivered</option>
                </select>
            </div>
            <div class="formGroup">
                <button type="submit">Cập nhật trạng thái</button>
            </div>
        </form>
    </div>

</div>



        <!-- Add your JavaScript file -->
        <script src="../../public/scripts/admin-sidebar.js"></script>
</body>
</html>
