        <div id="box-search" class="box-search">
            <div class="icon-search">
            <img
                id="search"
                src="/icons/icon-search.svg"
                width="25px"
                height="25px"
                alt="Search"
            />
            </div>
            <input placeholder="Search" type="text" />
        </div>
<div id="overlay" class="overlay" onclick="closeSearch()"></div>



    <script>
        function showSearch() {
            var boxSearch = document.getElementById('box-search');
            var overlay = document.getElementById('overlay');
            // Kiểm tra xem boxSearch có đang hiển thị dưới dạng flex không
            if (boxSearch.style.display === 'flex') {
                closeSearch(); // Nếu đang flex thì đóng hộp tìm kiếm
            } else {
                // Nếu không phải flex thì mở hộp tìm kiếm
                boxSearch.style.display = 'flex';
                overlay.style.display = 'block';
            }
        }

        function closeSearch() {
            var boxSearch = document.getElementById('box-search');
            var overlay = document.getElementById('overlay');

            boxSearch.style.display = 'none';
            overlay.style.display = 'none';
        }
    </script>


